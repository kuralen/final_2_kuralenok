<Window x:Class="kafe_kuralenok_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kafe_kuralenok_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="0" MinWidth="400" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <StackPanel Height="100" MinWidth="400" MinHeight="100" VerticalAlignment="Top" Orientation="Horizontal">
                
            </StackPanel>
            <Label Content="Добро пожаловать в кафе BENI!" HorizontalAlignment="Center" Foreground="#FF000000" Background="#FFE8B731" HorizontalContentAlignment="Center"/>
            <Label Content="Введите логин:" Foreground="Black" Width="239"/>
            <TextBox TextWrapping="Wrap"  Width="240" TextChanged="TextBox_TextChanged" FontSize="14" Height="49"/>
            <Label Content="Введите пароль:" Foreground="Black" Width="239"/>
            <PasswordBox Width="240" Height="49"/>

            <Button Content="Bойти" Width="152" Background="White" Margin="0,28,0,0"/>
        </StackPanel>


    </Grid>
</Window>
